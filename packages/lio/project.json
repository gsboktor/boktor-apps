{
  "name": "lio",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/lio/src",
  "projectType": "application",
  "tags": [],
  "// targets": "to see all targets run: nx show project lio --web",
  "targets": {
    "serve": {
      "executor": "@nx/vite:dev-server",
      "dependsOn": ["lio:build"],
      "options": {
        "buildTarget": "lio:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "lio:build:development"
        },
        "local": {
          "buildTarget": "lio:build:local"
        },
        "production": {
          "buildTarget": "lio:build:production"
        }
      }
    },
    "build": {
      "executor": "@nx/vite:build",
      "defaultConfiguration": "development",
      "outputs": ["{options.outputPath}"],
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production"
        },
        "local": {}
      },
      "options": {
        "outputPath": "dist/packages/lio",
        "tsConfig": "packages/lio/tsconfig.app.json"
      }
    }
  }
}
