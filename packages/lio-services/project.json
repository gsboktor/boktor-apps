{
  "name": "lio-services",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/lio-services/src",
  "projectType": "application",
  "tags": ["scope:services"],
  "targets": {
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "build-root-yarn-lock": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bun install --yarn",
        "cwd": "."
      }
    },
    "build": {
      "dependsOn": ["build-root-yarn-lock"],
      "executor": "@nx/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "local",
      "configurations": {
        "local": {
          "optimization": false,
          "sourceMap": true,
          "environment": {
            "NODE_ENV": "local"
          }
        },
        "development": {
          "optimization": false,
          "sourceMap": true,
          "environment": {
            "NODE_ENV": "development"
          }
        },
        "production": {
          "optimization": true,
          "environment": {
            "NODE_ENV": "production"
          }
        }
      },
      "options": {
        "compiler": "tsc",
        "main": "packages/lio-services/src/main.ts",
        "outputPath": "dist/packages/lio-services",
        "webpackConfig": "packages/lio-services/webpack.config.js",
        "sourceMap": false,
        "generatePackageJson": true
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "defaultConfiguration": "local",
      "dependsOn": ["docker-build"],
      "configurations": {
        "local": {
          "command": "bunx docker run -p 3000:4203 --env-file ./packages/lio-services/.env -t lio-services"
        },
        "development": {
          "command": "bunx docker run -p 3000:4203 --env-file ./packages/lio-services/.env.development -t lio-services"
        },
        "production": {
          "command": "bunx docker run -p 3000:4203 --env-file ./packages/lio-services/.env.production -t lio-services"
        }
      }
    },
    "docker-build": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "defaultConfiguration": "local",
      "options": {
        "command": "docker build -f packages/lio-services/Dockerfile . -t lio-services"
      }
    }
  }
}
